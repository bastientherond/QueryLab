<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:control="using:QueryLab.App.Views.Components"
             xmlns:conv="using:QueryLab.App.Converters"
             xmlns:vm="clr-namespace:QueryLab.App.ViewModels"
             x:DataType="vm:SqlEditorViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="QueryLab.App.Views.SqlEditorView"
             d:DataContext="{d:DesignInstance vm:SqlEditorViewModel}">
    
    <UserControl.Resources>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Boutons -->
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
            <Button Content="Exécuter" Command="{Binding ExecuteQueryCommand}" IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBoolConverter}}" />
            <Button Content="Annuler" Command="{Binding CancelQueryCommand}" IsEnabled="{Binding IsExecuting}" Margin="5,0,0,0" />
        </StackPanel>

        <!-- Zone d'édition -->
        <TextBox Grid.Row="1"
                 Text="{Binding Document.SqlText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 TextChanged="OnSqlTextChanged"
                 FontFamily="Consolas"
                 FontSize="14"/>


        <!-- Résultats -->
        <control:ResultGridControl DataContext="{Binding}" Grid.Row="2" Margin="5"/>
    </Grid>
</UserControl>
